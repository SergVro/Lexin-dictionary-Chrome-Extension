{
  "manifest_version": 2,
  "name": "Lexin dictionary",
  "version":"1.8.0",
  "description": "Swedish to other languages dictionary. Powered by Lexin and Folkets Lexikon",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png" },
  "background":
  {
    "page": "html/background.html"
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_popup": "html/popup.html"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self';",

  "permissions": [
    "http://lexin.nada.kth.se/",
    "http://folkets-lexikon.csc.kth.se/",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],
  "web_accessible_resources": [
    "scripts/LinkAdapter.js",
    "scripts/content.js",
    "scripts/BackendMethods.js",
    "scripts/BackendService.js",
    "scripts/TranslationDirection.js"
  ],
  "content_scripts": [{
    "run_at": "document_end",
    "all_frames": true,
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "js": [
      "lib/jquery.min.js",
      "lib/jquery-ui.min.js",
      "lib/require.js",
      "lib/require-cs.js",
      "scripts/content-main.js"
    ],
    "css": [
      "css/cssreset-context-min.css",
      "css/content.css"
    ]
  }],
  "options_page": "html/options.html"
}