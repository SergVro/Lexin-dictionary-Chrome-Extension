{
  "manifest_version": 3,
  "name": "Lexin dictionary",
  "version": "1.8.0.8",
  "description": "Swedish to other languages dictionary. Powered by Lexin and Folkets Lexikon",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "scripts/background-main.js"
  },
  "action": {
    "default_icon": "icons/icon19.png",
    "default_popup": "html/popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "host_permissions": [
    "http://lexin.nada.kth.se/*",
    "http://folkets-lexikon.csc.kth.se/*"
  ],
  "permissions": [
    "storage",
    "tabs"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/*.js",
        "scripts/dictionary/*.js",
        "scripts/messaging/*.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "all_frames": true,
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "scripts/content-main.js"
      ],
      "css": [
        "css/cssreset-context-min.css",
        "css/content.css"
      ]
    }
  ],
  "options_page": "html/options.html"
}
