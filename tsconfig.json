{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist/temp",
    "rootDir": "./src",
    "allowJs": true,
    "types": ["chrome"]
  },
  "include": [
    "src/scripts/**/*",
    "src/manifest.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "src/lib/**/*",
    "bower_components"
  ]
}
